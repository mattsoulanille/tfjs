{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "plugins": [
      {
        "name": "@bazel/tsetse",
        "disabledRules": [
          "check-return-value",
          "must-use-promises",
          "must-type-assert-json-parse",
          "ban-promise-as-condition"
        ]
      }
    ]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules/"
  ]
}
